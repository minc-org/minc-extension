{
  "name": "minc",
  "displayName": "MicroShift",
  "description": "Integration for MicroShift: run local Kubernetes clusters using container “nodes”",
  "version": "0.5.0-next",
  "icon": "icon.png",
  "publisher": "minc-org",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "podman-desktop": "^1.17.0"
  },
  "main": "./dist/main.cjs",
  "contributes": {
    "configuration": {
      "title": "MicroShift",
      "properties": {
        "microshift.cluster.form.description": {
          "type": "markdown",
          "scope": "KubernetesProviderConnectionFactory",
          "markdownDescription": "A MicroShift cluster is created using custom ports for routes."
        },
        "microshift.cluster.creation.http.port": {
          "type": "number",
          "default": 80,
          "scope": "KubernetesProviderConnectionFactory",
          "description": "HTTP Port for the routes"
        },
        "microshift.cluster.creation.https.port": {
          "type": "number",
          "default": 443,
          "scope": "KubernetesProviderConnectionFactory",
          "description": "HTTPS Port for the routes"
        }
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "test:e2e": "playwright test",
    "format:check": "biome format",
    "format:fix": "biome format --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "watch": "vite build -w",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "inversify": "^7.5.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.54.2",
    "@podman-desktop/api": "^1.19.2",
    "@podman-desktop/podman-extension-api": "^1.19.2",
    "@podman-desktop/tests-playwright": "next",
    "@types/node": "^22.15.33",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "commitlint": "^19.8.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.40.0",
    "vite": "7.1.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6"
}
