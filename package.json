{
  "name": "minc",
  "displayName": "MicroShift",
  "description": "Integration for MicroShift: run local Kubernetes clusters using container “nodes”",
  "version": "0.2.0-next",
  "icon": "icon.png",
  "publisher": "minc-org",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "podman-desktop": "^1.17.0"
  },
  "main": "./dist/main.cjs",
  "contributes": {
    "configuration": {
      "title": "MicroShift",
      "properties": {
        "microshift.cluster.form.description": {
          "type": "markdown",
          "scope": "KubernetesProviderConnectionFactory",
          "markdownDescription": "For now, there are no options. A MicroShift cluster is created with the default ports:\n\n- **6443**\n- **9080**\n- **9443**"
        }
      }
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "format:check": "biome format",
    "format:fix": "biome format --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "watch": "vite build -w",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "inversify": "^7.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@podman-desktop/api": "^1.17.2",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "autoprefixer": "^10.4.21",
    "commitlint": "^19.8.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-import-resolver-custom-alias": "^1.3.2",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-etc": "^2.0.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-redundant-undefined": "^1.0.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^58.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.28.0",
    "vite": "6.2.3",
    "vitest": "^3.0.9"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6"
}
